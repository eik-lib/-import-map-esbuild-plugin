{
  "name": "@eik/esbuild-plugin",
  "version": "1.1.7",
  "description": "ESBuild plugin for loading import maps from a Eik server and applying the mapping to ECMAScript modules in preparation for upload to the same server.",
  "type": "module",
  "main": "./src/plugin.js",
  "files": [
    "src"
  ],
  "scripts": {
    "test": "tap --no-coverage",
    "test:snapshot": "TAP_SNAPSHOT=1 tap test/*.js --no-coverage",
    "lint": "eslint . --ext=js",
    "lint:fix": "eslint . --fix --ext=js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:eik-lib/esbuild-plugin.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "esbuild-plugin",
    "esbuild.js",
    "esbuild",
    "import",
    "url",
    "esm"
  ],
  "author": "Finn.no",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eik-lib/esbuild-plugin/issues"
  },
  "homepage": "https://github.com/eik-lib/esbuild-plugin#readme",
  "devDependencies": {
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "esbuild": "0.14.29",
    "eslint": "8.12.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.25.4",
    "fastify": "3.27.4",
    "semantic-release": "19.0.2",
    "tap": "15.2.3"
  },
  "dependencies": {
    "@eik/common": "3.0.0",
    "esbuild-plugin-import-map": "2.1.0",
    "undici": "4.16.0"
  }
}
